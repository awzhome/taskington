{
    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
        "packages": true,
        ".ionide": true,
        ".vs": true,
    },
    "files.associations": {
        "*.axaml": "xml"
    },
    "[xml]": {
        "editor.formatOnSave": false
    },
    "[axml]": {
        "editor.formatOnSave": false
    },
    "[csharp]": {
        "editor.formatOnSave": true,
    },
    "omnisharp.useModernNet": true,
    "omnisharp.organizeImportsOnFormat": true,
}